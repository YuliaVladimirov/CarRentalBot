
###############################################
# ðŸ”’ Secret Configuration (Example Template)
# Copy this file to: secret.properties
# Fill in your own values before running the app
###############################################

############### PostgreSQL ####################
DB_HOST=your_postgresql_host
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

############# Telegram Bot Credentials #########
# Token obtained from BotFather
BOT_TOKEN=your_telegram_bot_token

# Username of your bot (e.g. MyCarRentalBot)
BOT_USERNAME=your_bot_username

# Optional secret value for validating webhook requests
BOT_SECRET=your_bot_secret

# Public HTTPS endpoint where Telegram will send updates
BOT_WEBHOOK_URL=https://your-public-domain.com/your-webhook-path

################### Redis #######################
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password   # Leave empty if no auth is used

################### Mailing ######################
# SMTP server of your mail provider
MAIL_HOST=smtp.your-mail-provider.com

# Login to your mail account
MAIL_USERNAME=your_email_username
MAIL_PASSWORD=your_email_password
